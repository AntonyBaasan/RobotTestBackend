.container
    .well
        form.form-horizontal(name="generateForm")
            fieldset
                legend RPComment List
        table.table.table-hover.table-striped.table-condensed
            thead
              tr
                th User
                th Text
                th Publish Date
            tbody
              tr(ng-repeat="comment in comments")
                td {{comment.user}}
                td {{comment.text}}
                td {{comment.published | date}}